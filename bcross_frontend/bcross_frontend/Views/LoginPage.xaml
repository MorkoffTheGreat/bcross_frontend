<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bcross_frontend.LoginPage"
             Shell.FlyoutBehavior="Disabled">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="30,30,30,30">
        <Image Source="icon.png" Margin="30,0,30,0"/>
        <Button x:Name="loginBtn" Margin="0,50,0,0" Text="Войти" Clicked="loginBtn_Clicked" Style="{StaticResource CustomButton}" ></Button>
        <Button x:Name="regBtn" Text="Зарегистрироваться" Clicked="regBtn_Clicked" Style="{StaticResource CustomButton}"></Button>
    </StackLayout>

</ContentPage>
