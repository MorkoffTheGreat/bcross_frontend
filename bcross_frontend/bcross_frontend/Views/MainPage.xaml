<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:bcross_frontend.Views"
       x:Class="bcross_frontend.MainPage"
       x:Name="shell"
       Shell.TabBarBackgroundColor="SpringGreen"
       Shell.TabBarUnselectedColor="Gray"
       Shell.TabBarTitleColor="Black"
       Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Домашняя" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate TypeName=local:HomePage}"/>
        </Tab>
        <Tab Title="Статистика" Icon="barchart.png">
            <ShellContent ContentTemplate="{DataTemplate TypeName=local:StatsPage}"/>
        </Tab>
        <Tab Title="Карта" Icon="placeholder.png">
            <ShellContent ContentTemplate="{DataTemplate TypeName=local:MapPage}"/>
        </Tab>
        <Tab Title="Профиль" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate TypeName=local:ProfilePage}"/>
        </Tab>
    </TabBar>
</Shell>